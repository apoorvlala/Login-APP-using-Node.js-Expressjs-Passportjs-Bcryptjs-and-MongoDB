<div class="jumbotron" style="margin-top: -9px;">
        <div class="container">                
          <h1 class="display-3">Registeration</h1>
          <form action="/users/register" method="post">
            <div class="form-group">
                <label for="exampleInputEmail1">Name</label>
                <input type="text" name="name" class="form-control" placeholder="Enter name">  
                {{#if errors.name}}        
                <div class="alert alert-danger">
                  <strong>{{errors.name.msg}}</strong> 
                </div>
                {{/if}}              
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Username</label>
                <input type="text" name="username" class="form-control" placeholder="Enter username">                
                {{#if errors.username}}        
                <div class="alert alert-danger">
                  <strong>{{errors.username.msg}}</strong> 
                </div>
                {{/if}}
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="text" name="email" class="form-control" placeholder="Enter email">
                {{#if errors.email}}        
                <div class="alert alert-danger">
                  <strong>{{errors.email.msg}}</strong> 
                </div>
                {{/if}}                
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" name="password" class="form-control" placeholder="Password">
                {{#if errors.password}}        
                <div class="alert alert-danger">
                  <strong>{{errors.password.msg}}</strong> 
                </div>
                {{/if}}
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Confirm Password</label>
                <input type="password" name="confirmpass" class="form-control" placeholder="Confirm Password">
                {{#if errors.confirmpass}}        
                <div class="alert alert-danger">
                  <strong>{{errors.confirmpass.msg}}</strong> 
                </div>
                {{/if}}
            </div>
            
            <input type="submit" class="btn btn-primary" name="submit" value="Submit">
            </form>
        </div>
      </div>

